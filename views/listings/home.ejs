<% layout("/layouts/boilerplate") %>

<div class="hero-section text-center d-flex flex-column justify-content-center align-items-center">
    <div class="hero-content">
        <h1 class="display-4 fw-bold fs-2">Welcome to Wanderlust üåç</h1>
        <p class="lead">Find the best destinations, explore unique stays, and start your next adventure with ease.</p>
        <p class="extra-info">Embark on a journey like never before! Discover hidden gems, book unforgettable experiences, and meet fellow adventurers along the way!</p>
        <a href="/listing" class="btn btn-dark add-btn explore-btn ">Start Exploring</a>
    </div>
</div>

<style>
    .hero-section {
        background-color: #f8f9fa; /* Light background matching your theme */
        height: 80vh;
        display: flex;
        padding: 2rem;
    }
    .hero-content {
        background: white;
        padding: 2rem;
        border-radius: 15px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        max-width: 600px;
        text-align: center;
    }
    .extra-info {
        font-size: 1.1rem;
        color: #6c757d;
        margin-top: 1rem;
        font-weight: 500;
    }
    .explore-btn {
        border-radius: 25px;
        padding: 12px 24px;
        font-size: 1.2rem;
    }
</style>
