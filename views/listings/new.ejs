<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2">
        <br>
    <h3>Create New Listings</h3>
    <form method="post" action="/listing" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" 
            name="listing[title]" 
            placeholder="Add a catchy title" 
            id="title" 
            class="form-control"
            required>
            <div class="valid-feedback">Title good looks</div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea type="text" 
                name="listing[description]" 
                placeholder="Enter Description" 
                id="description"
                class="form-control"
                required></textarea>
                <div class="invalid-feedback">Enter short and valid Description.</div>

        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Upload Listing Image</label>
            <input type="file" 
            name="listing[image]"  
            class="form-control" 
            placeholder="Enter image Link/URL" 
            id="image"
            required>
        </div>

        <div class="row">
            <div class="mb-3 col-md-3">
                <label for="price" class="form-label">Price</label>
                <input type="number" name="listing[price]"  class="form-control" placeholder="1200" id="" required>
                <div class="invalid-feedback">Price should be valid.</div>
            </div >
            <div class="mb-3 col-md-9">
                <label for="country" class="form-label">Country</label>
                <input type="text" name="listing[country]"  class="form-control" placeholder="India" id="" required>
                <div class="invalid-feedback">Country name should be valid.</div>
            </div>
        </div>
       
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="listing[location]"  class="form-control" placeholder="Jaipur , Rajasthan" id="" required>
            <div class="invalid-feedback">Location should be valid.</div>
        </div>
        
        <br>
        <button class="btn btn-dark add-btn">Add</button>
        <br>
    </form>
    <br>
</div>
</div>

   